{
  "kind": "collectionType",
  "collectionName": "challenges",
  "info": {
    "name": "Challenge"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 40
    },
    "details": {
      "type": "text",
      "maxLength": 500,
      "required": true
    },
    "pommesPoints": {
      "type": "biginteger",
      "required": true
    },
    "pictures": {
      "collection": "picture",
      "via": "challenge"
    },
    "titlePicture": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
